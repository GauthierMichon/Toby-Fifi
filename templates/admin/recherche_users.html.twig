						<a class="dropdown-item" href="#">Voiture</a>
					</li>
				</ul>
			</li>
			<li class="nav-item">
				<a class="nav-link active" href="admin_produits">Gérer les produits</a>
			</li>
            <li class="nav-item">
				<a class="nav-link active" href="logout">Se déconnecter</a>
			</li>
		</ul>
		<div class="espace">
			<div class="container">
				<div class="row">
					{% for membre in Users %}
						<div class="col-sm-4 col-lg-4">
							<div class="col">
								<div class="espace">
									<div class="card h-100">
										<a href="/membre/{{ membre.Id }}" class="link">
											<img src="{{ asset('images_users/' ~ membre.ImageName) }}" class="card-img-top" alt="...">
											<div class="card-body">
												<h4 class="card-title">{{ membre.nom }} {{ membre.prenom }}</h4>
												<p class="card-text">
													{{ membre.email }}
												</p>
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
