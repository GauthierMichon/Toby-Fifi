{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}

	<div class="header" id="myHeader">
		<header id="containerD">
			<div class="centerHeadLogo">
				<a class="centerHeadLogo" href="/index">
					<h1><img id="logoTB" src="../logo2.png" alt="logo du site"></h1>
				</a>
			</div>
			<form class="searchbar" action='/login' method='post'>
				<input type='text' name='rechercher' placeholder="Rechercher"/></form>
			<div class="connex">
				<form action='/login' method='post'>
					<a href="/login">Home</a>
				</form>
			</div>
		</div>
	</header>
	<div class="content">
		<nav>
			<ul class="centerHead"></ul>
		</nav>
	</div>

	<div class="retour">
		{{ form_start(form)}}
		{{ form_row(form.email) }}
		{{ form_row(form.nom) }}
		{{ form_row(form.prenom) }}
		{{ form_row(form.date_naissance) }}
		{{ form_row(form.solde) }}

		<button type="submit" class="btn">Modifier</button>
		{{ form_end(form) }}

		<a href="/modif_user_image/{{ user_id }}">Modifier la photo de profil</a>
	</div>
{% endblock %}
